
@{
    ViewBag.Title = "Chating";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --body-bg: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
        --msger-bg: #fff;
        --border: 2px solid #ddd;
        --left-msg-bg: #bdbdbd;
        --right-msg-bg: #579ffb;
    }
    .chat-container{
        width: 60%;
    }
    
    .page-heading {
        flex-direction: column;
    }
    .msger {
        display: flex;
        flex-flow: column wrap;
        justify-content: space-between;
        width: 100%;
        margin: 25px 10px;
        height: 600px;
        border: var(--border);
        border-radius: 5px;
        background: var(--msger-bg);
        overflow: scroll;
    }

    .msger-header {
        display: flex;
        justify-content: space-between;
        padding: 10px;
        background: #fff;
        color: #666;
    }

    .msger-chat {
        
        overflow-y: auto;
        padding: 10px;
        background: #fff !important;
        height: 350px !important;
        overflow-y: scroll;
    }

        .msger-chat::-webkit-scrollbar {
            width: 6px;
        }

        .msger-chat::-webkit-scrollbar-track {
            background: #ddd;
        }

        .msger-chat::-webkit-scrollbar-thumb {
            background: #bdbdbd;
        }

    .msg {
        display: flex;
        align-items: flex-end;
        margin-bottom: 10px;
    }

        .msg:last-of-type {
            margin: 0;
        }

    .msg-img {
        width: 50px;
        height: 50px;
        margin-right: 10px;
        background: #ddd;
        background-repeat: no-repeat;
        background-position: center;
        background-size: cover;
        border-radius: 50%;
    }

    .msg-bubble {
        max-width: 450px;
        padding: 15px;
        border-radius: 15px;
        background: #666 !important;
    }

    .msg-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 10px;
    }

    .msg-info-name {
        margin-right: 10px;
        font-weight: bold;
    }

    .msg-info-time {
        font-size: 0.85em;
    }

    .left-msg .msg-bubble {
        border-bottom-left-radius: 0;
        background-color: antiquewhite !important;
    }

    .right-msg {
        flex-direction: row-reverse;
    }

        .right-msg .msg-bubble {
            background: var(--right-msg-bg);
            color: #fff;
            border-bottom-right-radius: 0;
        }

        .right-msg .msg-img {
            margin: 0 0 0 10px;
        }

    .msger-inputarea {
        display: flex;
        padding: 10px;
        border-top: var(--border);
        background: #fff;
    }

        .msger-inputarea * {
            padding: 10px;
            border: none;
            border-radius: 3px;
            font-size: 1em;
        }
    .btn_submit{
        padding:10px;

    }
    .msger-input {
        flex: 1;
        background: #fff;
        box-shadow: 0 0 2px rgba(0,0,0,0.4);
    }

        .msger-input:focus {
            color: #607080;
            background-color: #fff;
            border-color: #a1afdf;
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgb(67 94 190 / 25%);
        }
        .msger-send-btn {
            margin-left: 10px;
            padding: 0 16px;
            height: 100%;
            background: rgb(0, 196, 65);
            color: #fff;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.23s;
        }

    .msger-send-btn:hover {
        background: rgb(0, 180, 50);
    }

    .msger-chat {
        background-color: #fcfcfe;
        background-image: url("https://i.dlpng.com/static/png/5199993-love-pink-background-wallpaper-wallpapers-pc-love-backgrounds-1004_1004_preview.png");
    }

    .loading-send {
        width: 45px;
        height: 45px;
    }
</style>
<input type="text" value="@((Session["User"] as CosmeticsShop.Models.User).ID)" id="UserID" hidden />

<div class="page-heading d-flex justify-content-center align-items-center ">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Chatbox</h3>
            </div>
        </div>
    </div>

    <section class="section chat-container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <header class="msger-header">
                        <div class="card-header">
                            <div class="media d-flex align-items-center">
                                <div class="avatar me-3">
                                    <img src="assets/images/faces/1.jpg" alt="" srcset="">
                                    <span class="avatar-status bg-success"></span>
                                </div>
                                <div class="msger-header-title">
                                    <h6 class="mb-0">@ViewBag.UserFullName</h6>
                                    <span class="text-xs">Online</span>
                                </div>
                                <button class="btn btn-sm">
                                    <i data-feather="x"></i>
                                </button>
                            </div>
                        </div>
                    </header>
                    <main class="msger-chat">
                    </main>
                    
                    <form class="msger-inputarea">
                        <div class="d-flex flex-grow-1 ml-4">
                            <input type="text" class="msger-input" placeholder="Type your message..">
                        </div>
                        <img src="~/Content/images/loading.gif" class="loading-send msger-send-btn" style="display:none" />
                        <div class="btn_submit">
                            <button type="submit" class="msger-send-btn" id="btn-send">Gửi</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    $(function () {
        var chat = $.connection.chatHubs
        chat.client.displayMessageChating = function () {
            getMessageData();
        }
        $.connection.hub.start();
        getMessageData();
    })
    function getMessageData() {
        var msgerchat = $('.msger-chat');
        var WithUserID = new URLSearchParams(window.location.search).get('WithUserID');
        $.ajax({
            url: location.origin + "/Chat/GetAllMessageChating?UserID=" + WithUserID,
            type: 'GET',
            dataType: 'JSON',
            success: function (data) {
                msgerchat.empty()
                if (data.length > 0) {
                    $.each(data, function (i, model) {
                        var date = new Date(parseInt(model.CreatedDate.substr(6)));
                        if (model.FromUserID == WithUserID) {
                            msgerchat.append(
                                '<div class="msg left-msg">' +
                                '<div class="msg-img"' +
                                'style="background-image: url(/Content/images/' + model.FromAvatarUser + ')"></div>' +
                                ' <div class="msg-bubble">' +
                                '<div class="msg-info">' +
                                '<div class="msg-info-name">' + model.FromUserName + '</div>' +
                                '<div class="msg-info-time">' + date.getHours() + ' : ' + date.getMinutes() + '</div>' +
                                '</div>' +
                                '<div class="msg-text">' + model.Content + '</div>' +
                                '</div>' +
                                '</div>'
                            );
                        } else {
                            msgerchat.append(
                                '<div class="msg right-msg">' +
                                '<div class="msg-img"' +
                                'style="background-image: url(/Content/images/' + model.FromAvatarUser + ')"></div>' +
                                ' <div class="msg-bubble">' +
                                '<div class="msg-info">' +
                                '<div class="msg-info-name">' + model.FromUserName + '</div>' +
                                '<div class="msg-info-time">' + date.getHours() + ' : ' + date.getMinutes() + '</div>' +
                                '</div>' +
                                '<div class="msg-text">' + model.Content + '</div>' +
                                '</div>' +
                                '</div>'
                            );
                        }
                        msgerchat.append(
                            '</div id="end">' +
                            '</div>'
                        )
                    })
                }
                $('.msger-chat').scrollTop(2000000);
            }
        })
    }
    $('#btn-send').click(function send() {
        event.preventDefault();
        var input = $('.msger-input').val();
        if (input == "") {
            $.notify("Vui lòng nhập vào tin nhắn!", "warn");
            return false;
        }
        var fromId = $('#UserID').val();
        var content = $('.msger-input').val();
        $.ajax({
            url: location.origin + "/Chat/Send",
            data: { FromUserID: fromId, ToUserID: new URLSearchParams(window.location.search).get('WithUserID'), Content: content },
            type: 'POST',
            dataType: 'JSON',
            success: function (data) {
                if (data.status) {
                    $(".loading-send").hide();
                    $("#btn-send").show();
                    $(".msger-input").prop("disabled", false);
                    $.notify("Đã gửi", "success");
                    $('.msger-input').val("");
                    $(".chatbox__body").animate({ scrollTop: 2000000 });
                    $('.msger-chat').animate({
                        scrollTop: $("#end").offset().top
                    }, 2000);
                } else {
                    $.notify("Có lỗi xảy ra!", "error");
                    return;
                }
            }
        })
        $("#btn-send").hide();
        $(".msger-input").prop("disabled", true);
        $(".loading-send").show();
    })
</script>