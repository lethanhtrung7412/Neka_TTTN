
@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

    List<CosmeticsShop.Models.ItemCart> itemCarts = Session["Cart"] as List<CosmeticsShop.Models.ItemCart>;
}
<script>
    $(document).ready(function () {
        $('.qty').on('keydown', function (e) {
            e.preventDefault();
        });
        $('.qty').change(function () {
            var ID = $(this).data("id");
            var Quantity = $(this).val();
            $.ajax({
                url: '/Cart/UpdateQuantity',
                data: {
                    ProductID: ID,
                    Quantity: Quantity
                },
                type: 'POST',
                dataType: 'json',
                success: function (response) {
                    if (response.update == true) {
                        $.notify("Cập nhật thành công!", "success");

                        $.ajax({
                            url: '/Cart/GetSubTotal',
                            data: {
                                ProductID: ID
                            },
                            type: 'GET',
                            dataType: 'json',
                            success: function (response) {
                                $("#" + ID).html(response.SubTotal + "₫")
                            },
                        });

                        $.ajax({
                            url: '/Cart/GetTotal',
                            data: {
                                ProductID: ID
                            },
                            type: 'GET',
                            dataType: 'json',
                            success: function (response) {
                                $(".total-cart").html("Tổng: " + response.Total + "₫")
                            },
                        });

                        $.ajax({
                            url: '/Cart/GetTotalCart',
                            type: 'GET',
                            dataType: 'json',
                            success: function (response) {
                                $(".simpleCart_total").html(response.TotalPrice + "₫ (" + response.TotalQuantity + ")")
                            },
                        });
                    } else if (response.remove == true) {
                        $.notify("Đã xóa sản phẩm trong giỏ hàng!", "success");
                        setTimeout(function () { location.reload(); }, 1000);
                    }
                    else if (response.status == false) {
                        $.notify("Số lượng không đủ!", "error");
                        setTimeout(function () {
                            window.location.reload();
                        }, 1500);
                    } else {
                        $.notify("Lỗi!", "error");
                        setTimeout(function () {
                            window.location.reload();
                        }, 1000);
                    }
                },
            });
        })
    });
</script>
<section class="page-add">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-breadcrumb">
                    <h2>Giỏ hàng<span>.</span></h2>
                    <a href="#">Trang chủ</a>

                    <a class="active" href="#">Giỏ hàng</a>
                </div>
            </div>
            <div class="col-lg-6">
            </div>
        </div>
    </div>
</section>
