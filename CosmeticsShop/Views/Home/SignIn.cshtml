
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<!-- Form sign in -->
<section class="vh-100 bg-image pt-1"
         style="background-image: url(@Url.Content("~/Content/Webapp/img/slider-1.png"));">
    <div class="mask d-flex align-items-center h-75 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Đăng nhập</h2>
                            <h6 style="color: red"> @ViewBag.message</h6>
                            <form action="/Home/SignIn" method="post" class="pt-3">
                                <div class="form-group">
                                    <input type="text" name="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                                </div>
                                <div class="form-group">
                                    <input type="password" name="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                </div>
                                <div class="mt-3">
                                    <input class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" type="submit" value="Đăng nhập">
                                </div>
                                <div class="my-2 d-flex justify-content-between align-items-center">
                                    <div class="form-check">
                                        <label class="form-check-label text-muted">
                                            <input type="checkbox" class="form-check-input">
                                            Nhớ mật khẩu
                                        </label>
                                    </div>
                                    <a href="#" class="auth-link text-black">Quên mật khẩu?</a>
                                </div>
                               
                                <div class="text-center mt-4 font-weight-light">
                                    Bạn chưa có tài khoản? <a href="/Home/SignUp" class="text-primary">Đăng ký</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

