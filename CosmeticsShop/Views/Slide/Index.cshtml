@model IEnumerable<CosmeticsShop.Models.Slide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<div class="container h-100 pt-5">
    <div class="list-group">
        @{
            foreach (var slide in Model)
            {
                <a href="/Slide/Details/@slide.ID" class="list-group-item list-group-item-action"  style="color: #1E1E1E">
                    <div class="d-flex flex-row justify-content-between align-items-center">
                        <p style="font-weight: 600" class="text-info">@slide.Name</p>
                        <div class="d-flex flex-column">
                            <p >Người tạo: @slide.User.Name</p>
                            <p >Đăng ngày: @slide.CreatedDate</p>
                        </div>
                    </div>
                </a>

            }
        }
    </div>
</div>