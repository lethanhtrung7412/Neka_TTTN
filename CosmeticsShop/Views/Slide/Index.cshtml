@model IEnumerable<CosmeticsShop.Models.Slide>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<head>
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/Admin/assets/css/app.css">
    <link rel="stylesheet" href="~/Content/Admin/assets/css/bootstrap.css" />
</head>

<body>
    <div id="app">
        <section id="content-types" class="mt-4 px-5">
            <div class="row">
                @{
                    foreach (var slide in Model)
                    {

                        <div class="col-md-6 col-sm-12 col-lg-6">
                            <div class="card">
                                <div class="card-content">
                                    <img style="object-fit:cover" class="card-img-top img-fluid" src="~/Content/images/@slide.Image"
                                         alt="Card image cap" />
                                    <div class="card-body">
                                        <h4 class="card-title">@slide.ID</h4>
                                        <p class="card-text">
                                            @slide.Name
                                        </p>
                                        <p class="card-text">
                                            @slide.User.Name
                                        </p>
                                        <a href="/Slide/Details/@slide.ID" class="btn btn-primary block">Xem thêm</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </section>
    </div>
</body>
