@model CosmeticsShop.Models.Slide

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<section class="page-add mb-2 px-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="page-breadcrumb">
                    <h2>Tin tức nổi bật<span>.</span></h2>
                    <a href="#">Trang chủ</a>

                    <a class="active" href="#">Bài viết</a>
                </div>
            </div>
            <div class="col-lg-6">
            </div>
        </div>
    </div>
</section>
<div class="container pt-5 w-100">
    <h2 style="text-align: center;">@Model.Name</h2>
    <img src="~/Content/images/@Model.Image" alt="picture" class="w-100 py-2" />
    <div>@Html.Raw(Model.Description)</div>

    <div class="d-flex flex-column">
        <div>
            <p style="color: #1e1e1e; font-weight: 600">Tác giả: @Model.User.Name</p>
        </div>
        <div>
            <p style="color: #1e1e1e; font-weight: 600">Ngày viết</p>
            <p>@Model.CreatedDate</p>
        </div>
    </div>
</div>